pipeline{
  agent any

  stages{
    stage('Build'){
      steps{
        cd /var/lib/jenkins/workspace/leafer
        mvn clean install
      }
    }

    stage('DB_Migration'){
      steps{
        mysql -u root -proot < /var/lib/jenkins/workspace/leafer/scripts/leafer.sql
      }
    }

    stage('Deploy'){
      steps{
        sh '/var/lib/jenkins/workspace/leafer/scripts/deploy.sh'
      }
    }
  }
}